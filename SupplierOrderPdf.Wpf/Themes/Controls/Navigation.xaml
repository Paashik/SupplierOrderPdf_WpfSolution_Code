<!-- 
    Material Design 3 Navigation Styles
    ====================================
    Этот файл содержит стили навигационных компонентов согласно Material Design 3 guidelines.
    
    Компоненты навигации MD3:
    - Navigation Rail: Боковая панель навигации (80dp ширина)
    - Tabs: Вкладки
    - Navigation Bar: Нижняя панель навигации
    
    Naming convention: MD3.Navigation.{Component}
-->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- ============================================== -->
    <!-- NAVIGATION RAIL                                -->
    <!-- Боковая панель навигации (80dp ширина)         -->
    <!-- ============================================== -->
    
    <!-- Navigation Rail Container -->
    <Style x:Key="MD3.NavigationRail" TargetType="Border">
        <Setter Property="Width" Value="{DynamicResource MD3.Size.NavigationRail.Width}"/>
        <Setter Property="Background" Value="{DynamicResource MD3.Brush.Surface}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Navigation Rail Item (как RadioButton) -->
    <Style x:Key="MD3.NavigationRail.Item" TargetType="RadioButton">
        <Setter Property="Width" Value="56"/>
        <Setter Property="Height" Value="56"/>
        <Setter Property="Margin" Value="12,4"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurfaceVariant}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="GroupName" Value="NavigationRail"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Icon container with indicator -->
                        <Grid Grid.Row="0" HorizontalAlignment="Center">
                            <!-- Active indicator pill -->
                            <Border x:Name="ActiveIndicator"
                                    Width="56"
                                    Height="32"
                                    CornerRadius="16"
                                    Background="Transparent"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                            
                            <!-- State layer -->
                            <Border x:Name="StateLayer"
                                    Width="56"
                                    Height="32"
                                    CornerRadius="16"
                                    Background="Transparent"
                                    IsHitTestVisible="False"/>
                            
                            <!-- Icon -->
                            <ContentPresenter x:Name="IconContent"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"/>
                        </Grid>
                        
                        <!-- Label -->
                        <TextBlock x:Name="Label"
                                   Grid.Row="1"
                                   Text="{TemplateBinding Tag}"
                                   FontFamily="{DynamicResource MD3.FontFamily.Primary}"
                                   FontSize="{DynamicResource MD3.FontSize.LabelMedium}"
                                   FontWeight="Medium"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- Checked/Selected state -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="ActiveIndicator" Property="Background" Value="{DynamicResource MD3.Brush.SecondaryContainer}"/>
                            <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSecondaryContainer}"/>
                            <Setter TargetName="Label" Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurface}"/>
                        </Trigger>
                        
                        <!-- Hover state -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="StateLayer" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{DynamicResource MD3.Color.OnSurface}" Opacity="0.08"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        
                        <!-- Pressed state -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsPressed" Value="True"/>
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter TargetName="StateLayer" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource MD3.Color.OnSurface}" Opacity="0.12"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        
                        <!-- Disabled state -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.38"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Navigation Rail Item как ListBoxItem -->
    <Style x:Key="MD3.NavigationRail.ListBoxItem" TargetType="ListBoxItem">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="56"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurfaceVariant}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Grid>
                        <!-- Active indicator pill -->
                        <Border x:Name="ActiveIndicator"
                                Width="56"
                                Height="32"
                                CornerRadius="16"
                                Background="Transparent"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        
                        <!-- State layer -->
                        <Border x:Name="StateLayer"
                                Width="56"
                                Height="32"
                                CornerRadius="16"
                                Background="Transparent"
                                IsHitTestVisible="False"/>
                        
                        <!-- Content -->
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- Selected state -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="ActiveIndicator" Property="Background" Value="{DynamicResource MD3.Brush.SecondaryContainer}"/>
                            <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSecondaryContainer}"/>
                        </Trigger>
                        
                        <!-- Hover state -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="StateLayer" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{DynamicResource MD3.Color.OnSurface}" Opacity="0.08"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        
                        <!-- Disabled state -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.38"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================== -->
    <!-- TABS                                           -->
    <!-- Вкладки                                        -->
    <!-- ============================================== -->
    
    <!-- Tab Control -->
    <Style x:Key="MD3.TabControl" TargetType="TabControl">
        <Setter Property="Background" Value="{DynamicResource MD3.Brush.Surface}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Tab header panel with bottom border -->
                        <Border Grid.Row="0"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource MD3.Brush.SurfaceVariant}"
                                BorderThickness="0,0,0,1">
                            <TabPanel x:Name="HeaderPanel"
                                      IsItemsHost="True"
                                      Margin="0"/>
                        </Border>
                        
                        <!-- Content area -->
                        <Border Grid.Row="1"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter x:Name="PART_SelectedContentHost"
                                              ContentSource="SelectedContent"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Tab Item (Primary Tabs) -->
    <Style x:Key="MD3.TabItem" TargetType="TabItem">
        <Setter Property="Height" Value="48"/>
        <Setter Property="MinWidth" Value="90"/>
        <Setter Property="Padding" Value="16,0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurfaceVariant}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontFamily" Value="{DynamicResource MD3.FontFamily.Primary}"/>
        <Setter Property="FontSize" Value="{DynamicResource MD3.FontSize.TitleSmall}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Grid x:Name="RootGrid">
                        <!-- State layer -->
                        <Border x:Name="StateLayer"
                                Background="Transparent"
                                IsHitTestVisible="False"/>
                        
                        <!-- Content -->
                        <ContentPresenter x:Name="ContentSite"
                                          ContentSource="Header"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"/>
                        
                        <!-- Active indicator (bottom line) -->
                        <Border x:Name="ActiveIndicator"
                                Height="3"
                                VerticalAlignment="Bottom"
                                Background="Transparent"
                                CornerRadius="3,3,0,0"/>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- Selected state -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.Primary}"/>
                            <Setter TargetName="ActiveIndicator" Property="Background" Value="{DynamicResource MD3.Brush.Primary}"/>
                        </Trigger>
                        
                        <!-- Hover state -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="StateLayer" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{DynamicResource MD3.Color.OnSurface}" Opacity="0.08"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        
                        <!-- Disabled state -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.38"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Secondary Tab Item -->
    <Style x:Key="MD3.TabItem.Secondary" TargetType="TabItem" BasedOn="{StaticResource MD3.TabItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Grid x:Name="RootGrid">
                        <!-- State layer -->
                        <Border x:Name="StateLayer"
                                Background="Transparent"
                                IsHitTestVisible="False"/>
                        
                        <!-- Content -->
                        <ContentPresenter x:Name="ContentSite"
                                          ContentSource="Header"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"/>
                        
                        <!-- Active indicator (full width bottom line) -->
                        <Border x:Name="ActiveIndicator"
                                Height="2"
                                VerticalAlignment="Bottom"
                                Background="Transparent"/>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- Selected state -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurface}"/>
                            <Setter TargetName="ActiveIndicator" Property="Background" Value="{DynamicResource MD3.Brush.Primary}"/>
                        </Trigger>
                        
                        <!-- Hover state -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="StateLayer" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{DynamicResource MD3.Color.OnSurface}" Opacity="0.08"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        
                        <!-- Disabled state -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.38"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================== -->
    <!-- NAVIGATION BAR (Bottom Navigation)             -->
    <!-- Нижняя панель навигации                        -->
    <!-- ============================================== -->
    
    <!-- Navigation Bar Container -->
    <Style x:Key="MD3.NavigationBar" TargetType="Border">
        <Setter Property="Height" Value="80"/>
        <Setter Property="Background" Value="{DynamicResource MD3.Brush.SurfaceContainer}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Navigation Bar Item -->
    <Style x:Key="MD3.NavigationBar.Item" TargetType="RadioButton">
        <Setter Property="MinWidth" Value="64"/>
        <Setter Property="MaxWidth" Value="96"/>
        <Setter Property="Height" Value="80"/>
        <Setter Property="Padding" Value="0,12,0,16"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurfaceVariant}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="GroupName" Value="NavigationBar"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Icon container with indicator -->
                        <Grid Grid.Row="0" HorizontalAlignment="Center">
                            <!-- Active indicator pill -->
                            <Border x:Name="ActiveIndicator"
                                    Width="64"
                                    Height="32"
                                    CornerRadius="16"
                                    Background="Transparent"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                            
                            <!-- State layer -->
                            <Border x:Name="StateLayer"
                                    Width="64"
                                    Height="32"
                                    CornerRadius="16"
                                    Background="Transparent"
                                    IsHitTestVisible="False"/>
                            
                            <!-- Icon -->
                            <ContentPresenter x:Name="IconContent"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"/>
                        </Grid>
                        
                        <!-- Label -->
                        <TextBlock x:Name="Label"
                                   Grid.Row="1"
                                   Text="{TemplateBinding Tag}"
                                   FontFamily="{DynamicResource MD3.FontFamily.Primary}"
                                   FontSize="{DynamicResource MD3.FontSize.LabelMedium}"
                                   FontWeight="Medium"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"/>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- Checked/Selected state -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="ActiveIndicator" Property="Background" Value="{DynamicResource MD3.Brush.SecondaryContainer}"/>
                            <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSecondaryContainer}"/>
                            <Setter TargetName="Label" Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurface}"/>
                        </Trigger>
                        
                        <!-- Hover state -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="StateLayer" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{DynamicResource MD3.Color.OnSurface}" Opacity="0.08"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        
                        <!-- Disabled state -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.38"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================== -->
    <!-- NAVIGATION DRAWER                              -->
    <!-- Боковое меню навигации                         -->
    <!-- ============================================== -->
    
    <!-- Navigation Drawer Container -->
    <Style x:Key="MD3.NavigationDrawer" TargetType="Border">
        <Setter Property="Width" Value="{DynamicResource MD3.Size.NavigationDrawer.Width}"/>
        <Setter Property="Background" Value="{DynamicResource MD3.Brush.SurfaceContainerLow}"/>
        <Setter Property="CornerRadius" Value="0,16,16,0"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Navigation Drawer Item -->
    <Style x:Key="MD3.NavigationDrawer.Item" TargetType="RadioButton">
        <Setter Property="Height" Value="56"/>
        <Setter Property="Padding" Value="16,0,24,0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurfaceVariant}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="GroupName" Value="NavigationDrawer"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid>
                        <!-- Active indicator background -->
                        <Border x:Name="ActiveIndicator"
                                CornerRadius="{DynamicResource MD3.Shape.Full}"
                                Background="Transparent"/>
                        
                        <!-- State layer -->
                        <Border x:Name="StateLayer"
                                CornerRadius="{DynamicResource MD3.Shape.Full}"
                                Background="Transparent"
                                IsHitTestVisible="False"/>
                        
                        <!-- Content -->
                        <Grid Margin="{TemplateBinding Padding}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Icon -->
                            <ContentPresenter Grid.Column="0"
                                              Content="{TemplateBinding Content}"
                                              VerticalAlignment="Center"/>
                            
                            <!-- Label -->
                            <TextBlock Grid.Column="1"
                                       Text="{TemplateBinding Tag}"
                                       FontFamily="{DynamicResource MD3.FontFamily.Primary}"
                                       FontSize="{DynamicResource MD3.FontSize.LabelLarge}"
                                       FontWeight="Medium"
                                       Foreground="{TemplateBinding Foreground}"
                                       VerticalAlignment="Center"
                                       Margin="12,0,0,0"/>
                        </Grid>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- Checked/Selected state -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="ActiveIndicator" Property="Background" Value="{DynamicResource MD3.Brush.SecondaryContainer}"/>
                            <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSecondaryContainer}"/>
                        </Trigger>
                        
                        <!-- Hover state -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="StateLayer" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{DynamicResource MD3.Color.OnSurface}" Opacity="0.08"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        
                        <!-- Disabled state -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.38"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Navigation Drawer Section Header -->
    <Style x:Key="MD3.NavigationDrawer.Header" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource MD3.FontFamily.Primary}"/>
        <Setter Property="FontSize" Value="{DynamicResource MD3.FontSize.TitleSmall}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurfaceVariant}"/>
        <Setter Property="Padding" Value="16,18,16,14"/>
    </Style>

    <!-- Navigation Drawer Divider -->
    <Style x:Key="MD3.NavigationDrawer.Divider" TargetType="Border">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{DynamicResource MD3.Brush.OutlineVariant}"/>
        <Setter Property="Margin" Value="0,8"/>
    </Style>

    <!-- ============================================== -->
    <!-- TOP APP BAR                                    -->
    <!-- Верхняя панель приложения                      -->
    <!-- ============================================== -->
    
    <!-- Top App Bar (Small) -->
    <Style x:Key="MD3.TopAppBar" TargetType="Border">
        <Setter Property="Height" Value="{DynamicResource MD3.Size.AppBar.Height}"/>
        <Setter Property="Background" Value="{DynamicResource MD3.Brush.Surface}"/>
        <Setter Property="Padding" Value="4,0,4,0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Top App Bar Title -->
    <Style x:Key="MD3.TopAppBar.Title" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource MD3.FontFamily.Primary}"/>
        <Setter Property="FontSize" Value="{DynamicResource MD3.FontSize.TitleLarge}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurface}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="16,0"/>
    </Style>

    <!-- Top App Bar (Center Aligned) -->
    <Style x:Key="MD3.TopAppBar.CenterAligned" TargetType="Border" BasedOn="{StaticResource MD3.TopAppBar}">
        <!-- Same as TopAppBar, title should be centered in content -->
    </Style>

    <!-- Top App Bar (Medium) -->
    <Style x:Key="MD3.TopAppBar.Medium" TargetType="Border">
        <Setter Property="Height" Value="112"/>
        <Setter Property="Background" Value="{DynamicResource MD3.Brush.Surface}"/>
        <Setter Property="Padding" Value="4,0,4,0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Top App Bar (Large) -->
    <Style x:Key="MD3.TopAppBar.Large" TargetType="Border">
        <Setter Property="Height" Value="152"/>
        <Setter Property="Background" Value="{DynamicResource MD3.Brush.Surface}"/>
        <Setter Property="Padding" Value="4,0,4,0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Top App Bar Large Title -->
    <Style x:Key="MD3.TopAppBar.Title.Large" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource MD3.FontFamily.Primary}"/>
        <Setter Property="FontSize" Value="{DynamicResource MD3.FontSize.HeadlineMedium}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurface}"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="16,0,16,28"/>
    </Style>

    <!-- ============================================== -->
    <!-- BREADCRUMBS                                    -->
    <!-- Хлебные крошки                                 -->
    <!-- ============================================== -->
    
    <Style x:Key="MD3.Breadcrumb.Item" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurfaceVariant}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontFamily" Value="{DynamicResource MD3.FontFamily.Primary}"/>
        <Setter Property="FontSize" Value="{DynamicResource MD3.FontSize.LabelLarge}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="StateLayer"
                                CornerRadius="4"
                                Background="Transparent"/>
                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="StateLayer" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{DynamicResource MD3.Color.OnSurface}" Opacity="0.08"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="StateLayer" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{DynamicResource MD3.Color.OnSurface}" Opacity="0.12"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MD3.Breadcrumb.Current" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurface}"/>
        <Setter Property="FontFamily" Value="{DynamicResource MD3.FontFamily.Primary}"/>
        <Setter Property="FontSize" Value="{DynamicResource MD3.FontSize.LabelLarge}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="MD3.Breadcrumb.Separator" TargetType="TextBlock">
        <Setter Property="Text" Value="/"/>
        <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurfaceVariant}"/>
        <Setter Property="FontFamily" Value="{DynamicResource MD3.FontFamily.Primary}"/>
        <Setter Property="FontSize" Value="{DynamicResource MD3.FontSize.LabelLarge}"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>