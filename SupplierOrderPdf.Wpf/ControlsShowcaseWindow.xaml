<Window x:Class="SupplierOrderPdf.Wpf.ControlsShowcaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="UI Controls Showcase"
        Width="1200"
        Height="800"
        MinWidth="800"
        MinHeight="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource MD3.Brush.Background}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16" Orientation="Vertical">

            <!-- Filters Section -->
            <materialDesign:Card Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="Filters Section"
                               Style="{DynamicResource MD3.Typography.HeadlineSmall}"
                               Margin="0,0,0,8"/>
                    <WrapPanel ItemWidth="250"
                               ItemHeight="72"
                               MinHeight="72"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center"
                               UseLayoutRounding="True">
                        <StackPanel>
                            <TextBlock Text="Search"
                                       Style="{DynamicResource MD3.Typography.LabelMedium}"
                                       Foreground="{DynamicResource MD3.Brush.OnSurfaceVariant}"/>
                            <TextBox x:Name="SearchTextBox"
                                     Style="{DynamicResource MD3.TextField.Outlined}"
                                     materialDesign:HintAssist.Hint="Search"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Year"
                                       Style="{DynamicResource MD3.Typography.LabelMedium}"
                                       Foreground="{DynamicResource MD3.Brush.OnSurfaceVariant}"/>
                            <ComboBox x:Name="YearComboBox"
                                      Style="{DynamicResource MD3.ComboBox.Outlined}">
                                <ComboBoxItem Content="2020"/>
                                <ComboBoxItem Content="2021"/>
                                <ComboBoxItem Content="2022"/>
                                <ComboBoxItem Content="2023"/>
                                <ComboBoxItem Content="2024"/>
                                <ComboBoxItem Content="2025"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Status"
                                       Style="{DynamicResource MD3.Typography.LabelMedium}"
                                       Foreground="{DynamicResource MD3.Brush.OnSurfaceVariant}"/>
                            <ComboBox x:Name="StatusComboBox"
                                      Style="{DynamicResource MD3.ComboBox.Outlined}">
                                <ComboBoxItem Content="Active"/>
                                <ComboBoxItem Content="Inactive"/>
                                <ComboBoxItem Content="Pending"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Actions"
                                       Style="{DynamicResource MD3.Typography.LabelMedium}"
                                       Foreground="{DynamicResource MD3.Brush.OnSurfaceVariant}"/>
                            <Button Content="Apply Filters"
                                    Style="{DynamicResource MD3.Button.Filled}"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Buttons Section -->
            <materialDesign:Card Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="Buttons Section"
                               Style="{DynamicResource MD3.Typography.HeadlineSmall}"
                               Margin="0,0,0,8"/>
                    <WrapPanel Orientation="Horizontal">
                        <Button Content="Primary Action"
                                Style="{DynamicResource MD3.Button.Filled}"
                                Margin="0,0,8,0"/>
                        <Button Content="Secondary Action"
                                Style="{DynamicResource MD3.Button.FilledTonal}"
                                Margin="0,0,8,0"/>
                        <Button Content="Tertiary Action"
                                Style="{DynamicResource MD3.Button.Outlined}"
                                Margin="0,0,8,0"/>
                        <Button Content="Text Action"
                                Style="{DynamicResource MD3.Button.Text}"
                                Margin="0,0,8,0"/>
                    </WrapPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- DataGrid Section -->
            <materialDesign:Card Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="DataGrid Section"
                               Style="{DynamicResource MD3.Typography.HeadlineSmall}"
                               Margin="0,0,0,8"/>
                    <DataGrid x:Name="SampleDataGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Background="{DynamicResource MD3.Brush.Surface}"
                              AlternationCount="2"
                              RowBackground="{DynamicResource MD3.Brush.Surface}"
                              AlternatingRowBackground="{DynamicResource MD3.Brush.SurfaceContainerLow}"
                              Foreground="{DynamicResource MD3.Brush.OnSurface}"
                              BorderBrush="{DynamicResource MD3.Brush.OutlineVariant}"
                              BorderThickness="1"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              SnapsToDevicePixels="True"
                              EnableRowVirtualization="True"
                              RowDetailsVisibilityMode="Collapsed"
                              RowHeight="48"
                              ColumnHeaderHeight="44">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Padding" Value="12,0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Background" Value="{DynamicResource MD3.Brush.SurfaceContainerHighest}"/>
                                <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSurface}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource MD3.Brush.OutlineVariant}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Padding" Value="12,0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource MD3.Brush.OutlineVariant}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="materialDesign:RippleAssist.IsCentered" Value="False"/>
                                <Setter Property="materialDesign:RippleAssist.Feedback" Value="{DynamicResource MD3.Brush.Secondary}"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource MD3.Brush.SecondaryContainer}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MD3.Brush.OnSecondaryContainer}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource MD3.Brush.SurfaceContainerLow}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                <Setter Property="SnapsToDevicePixels" Value="True"/>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </materialDesign:Card>

            <!-- Preview Section -->
            <materialDesign:Card Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="Preview Section"
                               Style="{DynamicResource MD3.Typography.HeadlineSmall}"
                               Margin="0,0,0,8"/>
                    <wv2:WebView2 x:Name="PreviewWebView"
                                  Height="300"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Cards Section -->
            <materialDesign:Card Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="Cards Section"
                               Style="{DynamicResource MD3.Typography.HeadlineSmall}"
                               Margin="0,0,0,8"/>
                    <WrapPanel>
                        <materialDesign:Card Width="300" Margin="0,0,16,0">
                            <StackPanel Margin="16">
                                <TextBlock Text="Customer Card"
                                           Style="{DynamicResource MD3.Typography.TitleMedium}"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Customer information and details go here."
                                           Style="{DynamicResource MD3.Typography.BodyMedium}"/>
                                <Button Content="View Details"
                                        Style="{DynamicResource MD3.Button.Outlined}"
                                        HorizontalAlignment="Left"
                                        Margin="0,8,0,0"/>
                            </StackPanel>
                        </materialDesign:Card>
                        <materialDesign:Card Width="300">
                            <StackPanel Margin="16">
                                <TextBlock Text="Supplier Card"
                                           Style="{DynamicResource MD3.Typography.TitleMedium}"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Supplier information and details go here."
                                           Style="{DynamicResource MD3.Typography.BodyMedium}"/>
                                <Button Content="Contact Supplier"
                                        Style="{DynamicResource MD3.Button.Filled}"
                                        HorizontalAlignment="Left"
                                        Margin="0,8,0,0"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </WrapPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Tabs and Forms Section -->
            <materialDesign:Card Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="Tabs and Forms Section"
                               Style="{DynamicResource MD3.Typography.HeadlineSmall}"
                               Margin="0,0,0,8"/>
                    <TabControl Style="{DynamicResource MD3.TabControl}">
                        <TabItem Header="General">
                            <Grid Margin="16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="SMTP Server"
                                           Style="{DynamicResource MD3.Typography.LabelMedium}"
                                           Foreground="{DynamicResource MD3.Brush.OnSurfaceVariant}"
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1"
                                         Style="{DynamicResource MD3.TextField.Outlined}"
                                         materialDesign:HintAssist.Hint="smtp.example.com"
                                         Margin="0,0,0,8"/>
                                <TextBlock Text="Password"
                                           Grid.Row="1"
                                           Style="{DynamicResource MD3.Typography.LabelMedium}"
                                           Foreground="{DynamicResource MD3.Brush.OnSurfaceVariant}"
                                           VerticalAlignment="Center"/>
                                <PasswordBox Grid.Row="1"
                                             Grid.Column="1"
                                             Style="{DynamicResource MD3.TextField.Outlined}"
                                             materialDesign:HintAssist.Hint="Enter password"
                                             Margin="0,0,0,8"/>
                                <CheckBox Grid.Row="2"
                                          Grid.Column="1"
                                          Content="Enable SSL"
                                          Foreground="{DynamicResource MD3.Brush.OnSurface}"
                                          Margin="0,8,0,0"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Advanced">
                            <Grid Margin="16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Port"
                                           Style="{DynamicResource MD3.Typography.LabelMedium}"
                                           Foreground="{DynamicResource MD3.Brush.OnSurfaceVariant}"
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1"
                                         Style="{DynamicResource MD3.TextField.Outlined}"
                                         materialDesign:HintAssist.Hint="587"
                                         Margin="0,0,0,8"/>
                                <TextBlock Text="Timeout"
                                           Grid.Row="1"
                                           Style="{DynamicResource MD3.Typography.LabelMedium}"
                                           Foreground="{DynamicResource MD3.Brush.OnSurfaceVariant}"
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Row="1"
                                         Grid.Column="1"
                                         Style="{DynamicResource MD3.TextField.Outlined}"
                                         materialDesign:HintAssist.Hint="30 seconds"
                                         Margin="0,0,0,8"/>
                                <CheckBox Grid.Row="2"
                                          Grid.Column="1"
                                          Content="Use authentication"
                                          Foreground="{DynamicResource MD3.Brush.OnSurface}"
                                          Margin="0,8,0,0"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </materialDesign:Card>

        </StackPanel>
    </ScrollViewer>
</Window>